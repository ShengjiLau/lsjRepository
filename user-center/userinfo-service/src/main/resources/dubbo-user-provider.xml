<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="userinfo-service"  />
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:registry protocol="zookeeper" address="${ZKHOST}"/>
    <!--<dubbo:registry protocol="multicast" address="224.5.6.8:1234?unicast=false" />-->
    <dubbo:protocol name="dubbo" port="20881"/>

    <dubbo:annotation package="com.lcdt.userinfo.service.impl,com.lcdt.clms.permission.service.impl"/>

</beans>