<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lcdt.clms.permission.dao.AdminPermissionMapper">
  <resultMap id="BaseResultMap" type="com.lcdt.clms.permission.model.AdminPermission">
    <id column="admin_permission_id" jdbcType="BIGINT" property="adminPermissionId" />
    <result column="admin_permission_name" jdbcType="VARCHAR" property="adminPermissionName" />
    <result column="admin_permission_code" jdbcType="VARCHAR" property="adminPermissionCode" />
    <result column="admin_permission_category" jdbcType="VARCHAR" property="adminPermissionCategory" />
    <result column="dictionary_value" jdbcType="VARCHAR" property="adminPermissionCategoryValue" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from t_admin_permission
    where admin_permission_id = #{adminPermissionId,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com.lcdt.clms.permission.model.AdminPermission">
    <selectKey keyProperty="adminPermissionId" order="AFTER" resultType="java.lang.Long">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into t_admin_permission (admin_permission_name, admin_permission_code, 
      admin_permission_category)
    values (#{adminPermissionName,jdbcType=VARCHAR}, #{adminPermissionCode,jdbcType=VARCHAR}, 
      #{adminPermissionCategory,jdbcType=VARCHAR})
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.lcdt.clms.permission.model.AdminPermission">
    update t_admin_permission
    set admin_permission_name = #{adminPermissionName,jdbcType=VARCHAR},
      admin_permission_code = #{adminPermissionCode,jdbcType=VARCHAR},
      admin_permission_category = #{adminPermissionCategory,jdbcType=VARCHAR}
    where admin_permission_id = #{adminPermissionId,jdbcType=BIGINT}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select admin_permission_id, admin_permission_name, admin_permission_code, admin_permission_category
    from t_admin_permission
    where admin_permission_id = #{adminPermissionId,jdbcType=BIGINT}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select
    <include refid="column" ><property name="table_name" value="p"></property></include>
    ,d.dictionary_value
    from t_admin_permission p left join dictionary d on p.admin_permission_category = d.dictionary_key
    where 1=1
    <if test="obj != null">
      <include refid="select_condition"><property name="table_name" value="p"></property></include>
    </if>
  </select>

  <sql id="column">
    ${table_name}.admin_permission_id,
    ${table_name}.admin_permission_name,
    ${table_name}.admin_permission_code,
    ${table_name}.admin_permission_category
  </sql>
  <sql id="select_condition">
    <if test="obj.adminPermissionName != null and obj.adminPermissionName.length > 0">
      and ${table_name}.admin_Permission_Name like concat('%',#{obj.adminPermissionName,jdbcType=VARCHAR},'%')
    </if>
    <if test="obj.adminPermissionCode != null and obj.adminPermissionCode.length > 0">
      and ${table_name}.admin_Permission_code like concat('%',#{obj.adminPermissionCode,jdbcType=VARCHAR},'%')
    </if>
    <if test="obj.adminPermissionCategory != null and obj.adminPermissionCategory.length > 0">
      and ${table_name}.admin_Permission_category = #{obj.adminPermissionCategory,jdbcType=VARCHAR}
    </if>
  </sql>
</mapper>