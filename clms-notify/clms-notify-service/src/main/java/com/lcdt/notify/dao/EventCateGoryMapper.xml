<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lcdt.notify.dao.EventCateGoryMapper">
  <resultMap id="BaseResultMap" type="com.lcdt.notify.model.EventCateGory">
    <result column="event_id" jdbcType="INTEGER" property="eventId" />
    <result column="event_name" jdbcType="VARCHAR" property="eventName" />
    <result column="event_show_name" jdbcType="VARCHAR" property="eventShowName" />
    <result column="event_module_name" jdbcType="VARCHAR" property="eventModuleName" />
  </resultMap>
  <insert id="insert" parameterType="com.lcdt.notify.model.EventCateGory">
    <selectKey keyProperty="eventId" order="AFTER" resultType="java.lang.Integer">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into event_category (event_name, event_show_name, event_module_name
      )
    values (#{eventName,jdbcType=VARCHAR}, #{eventShowName,jdbcType=VARCHAR}, #{eventModuleName,jdbcType=VARCHAR}
      )
  </insert>
  <select id="selectAll" resultMap="BaseResultMap">
    select event_id, event_name, event_show_name, event_module_name
    from event_category
  </select>
</mapper>