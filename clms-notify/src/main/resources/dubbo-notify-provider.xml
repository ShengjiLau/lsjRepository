<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="common-notify-service"  />
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:registry protocol="zookeeper" address="zookeeper://127.0.0.1:2181"/>
    <dubbo:protocol name="dubbo" port="20889" />
<!--
    <dubbo:service interface="com.lcdt.notify.service.SmsService" ref="smsService" />
    <bean id="smsService" class="com.lcdt.notify.service.impl.SmsServiceImpl" />-->
    <dubbo:annotation package="com.lcdt.notify.service"/>
</beans>